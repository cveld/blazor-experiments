@page "/counter"

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button @onmouseout="onMouseOut" class="btn btn-primary" @onclick="IncrementCount">Mouse out</button>
<button @onmouseleave="onMouseOut" class="btn btn-primary" @onclick="IncrementCount">Mouse leave</button>

@code {
    int currentCount = 0;

    void IncrementCount()
    {
        currentCount++;
    }

    void onMouseOut(MouseEventArgs mouseEventArgs)
    {
        currentCount++;
    }
}
